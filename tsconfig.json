{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "out",
    "lib": ["dom", "es2020"],
    "sourceMap": true,
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": [
      "vite/client"
    ]
  },
  "exclude": [
    ".vscode-test",
    "esp",
    "node_modules",
    "test-resources"
  ]
}
