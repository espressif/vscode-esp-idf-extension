{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "exclude": [
    ".vscode-test",
    "esp",
    "node_modules",
    "src/views",
    "test-resources"
  ]
}
